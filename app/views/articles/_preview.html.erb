<div class="row justify-content-md-center">
  <div class="col-8 mt-4">
    <div class="card text-center shadow ">
      <div class="card-header fst-italic">by John</div>
      <div class="card-body">
        <h5 class="card-title"><%= link_to article.title, article, class: "text-success" %></h5>
        <p class="card-text"><%= truncate(article.description, length: 100) %></p>
        <%= link_to "View", article, class:"btn btn-outline-success" %>
        <%= link_to "Edit", edit_article_path(article), class:"btn btn-outline-info" %>
        <%= button_to "Delete", article_path(article), method: :delete, class:"btn btn-outline-danger", onclick: "return confirm('Are you sure?')", form: { class: "d-inline"} %>
      </div>
      <div class="card-footer text-muted">
        <small>
          Created <%= time_ago_in_words(article.created_at) %> ago
          <% unless article.created_at == article.updated_at %>
          ,edited <%= time_ago_in_words(article.updated_at) %> ago
          <% end %>
        </small>      
      </div>
    </div>
  </div>
</div>